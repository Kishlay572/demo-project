<% layout("/layouts/boilerplate") %>

<div id="filters-bar" class="d-flex align-items-center justify-content-between">
  <!-- Categories (scrollable on small screens) -->
  <div id="categories" class="d-flex flex-nowrap overflow-auto mt-2">
    <a href="/listings/category/Trending" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
    </a>
    <a href="/listings/category/Rooms" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
    </a>
    <a href="/listings/category/Iconic Cities" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-mountain-city"></i>
        <p>Iconic cities</p>
      </div>
    </a>
    <a href="/listings/category/Mountains" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-mountain"></i>
        <p>Mountains</p>
      </div>
    </a>
    <a href="/listings/category/Castles" class="filter-link">
      <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
      </div>
    </a>
    <a href="/listings/category/Amazing Pools" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Amazing pools</p>
      </div>
    </a>
    <a href="/listings/category/Camping" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
      </div>
    </a>
    <a href="/listings/category/Farms" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-tractor"></i>
        <p>Farms</p>
      </div>
    </a>
    <a href="/listings/category/Arctic" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-snowflake"></i>
        <p>Arctic</p>
      </div>
    </a>
    <a href="/listings/category/Beach" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beach</p>
      </div>
    </a>
    <a href="/listings/category/Boats" class="filter-link">
      <div class="filter">
        <i class="fa-solid fa-ship"></i>
        <p>Boats</p>
      </div>
    </a>
  </div>

  <!-- Tax toggle (always visible at right) -->
  <div class="tax-toggle ms-3 flex-shrink-0">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-mb-2 row-cols-sm-1 mt-3">
  <% for(let listing of allListings) { %>
  <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 20rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b>
          <br />
        </p>

        <p>
          &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
          <i class="tax-info">&nbsp;&nbsp;+18%gst</i>
        </p>
      </div>
    </div>
    <% } %>
  </a>
</div>
